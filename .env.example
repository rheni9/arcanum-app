# ============================================
# Core Flask settings (REQUIRED)
# ============================================

# REQUIRED. Secret key for Flask sessions and CSRF protection.
FLASK_SECRET_KEY=your_flask_secret_key

# REQUIRED. Database connection URI.
# Example SQLite: sqlite:////absolute/path/to/db.sqlite3
# Example PostgreSQL: postgresql://user:password@host:port/dbname
database_url=postgresql://your_db_user:your_db_password@localhost:5432/your_db_name

# REQUIRED. Admin password for access to the application.
APP_ADMIN_PASSWORD=your_admin_password

# ============================================
# Environment and logging (OPTIONAL)
# ============================================

# OPTIONAL. Application environment ('development', 'testing', 'production').
FLASK_ENV=development

# OPTIONAL. Logging level ('DEBUG', 'INFO', 'WARNING', 'ERROR').
LOG_LEVEL=DEBUG

# ============================================
# CSRF configuration (OPTIONAL)
# ============================================

# OPTIONAL. Separate CSRF secret key for WTForms.
WTF_CSRF_SECRET_KEY=your_wtf_csrf_secret_key

# ============================================
# Application-specific custom settings (OPTIONAL)
# ============================================

# OPTIONAL. Default timezone name for UI and datetime handling.
DEFAULT_TIMEZONE=your_timezone

# OPTIONAL. Port for running the Flask server (default 5000).
PORT=5000

# OPTIONAL. Force HTTPS redirection ('true' or 'false').
FORCE_HTTPS=false

# OPTIONAL. Application root directory (absolute path). 
APP_ROOT_DIR=/absolute/path/to/app

# OPTIONAL. Custom application name (used in logging or UI).
APP_NAME=Arcanum

# ============================================
# Application Internationalization / Localization
# ============================================
APP_LANGUAGES=en,ua
APP_DEFAULT_LOCALE=en

# ============================================
# Cloudinary credentials (OPTIONAL)
# ============================================

CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# Backblaze B2 credentials (OPTIONAL)
# ============================================

B2_S3_ENDPOINT_URL=https://s3.region.backblazeb2.com
B2_S3_BUCKET_NAME=your_b2_bucket_name
B2_S3_ACCESS_KEY_ID=your_b2_access_key_id
B2_S3_SECRET_ACCESS_KEY=your_b2_secret_access_key